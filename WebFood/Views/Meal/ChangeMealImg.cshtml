@using WebFood.Models.Entities
@model Meal
@{
    ViewData["Title"] = "Изменить изображение";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="container-xl mt-3">
    <div class="d-flex justify-content-center">
        <div class="col-10 col-sm-6 col-md-6 col-lg-4">

            <form asp-controller="Meal" asp-action="ChangeMealImg" method="post" enctype="multipart/form-data">

                <div class="d-flex flex-column">

                    <label asp-for="ImageUrl" class="mt-3">Изображение*</label>
                    <input class="form-control" asp-for="ImageUrl" type="file" data-val-required="Загрузите изображение">
                    <span asp-validation-for="ImageUrl" class="text-danger mt-2"></span>

                    <input class="form-control" asp-for="Id" type="hidden" value="@Model.Id">
                    <input class="form-control" asp-for="Price" type="hidden" value="@Model.Price">

                    <button class="mt-3 btn btn-primary">Подтвердить</button>
                    <a class="mt-3" asp-controller="Restaurant" asp-action="Restaurant" asp-route-restaurantId="@Model.RestaurantId">Назад</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
    }
