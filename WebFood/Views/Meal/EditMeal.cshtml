@using WebFood.Models.ViewModels
@model MealViewModel
@{
    ViewData["Title"] = "Изменить блюдо";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container-xl mt-3">
    <div class="d-flex justify-content-center">
        <div class="col-10 col-sm-6 col-md-6 col-lg-4">

            <form asp-controller="Meal" asp-action="EditMeal" method="post" enctype="multipart/form-data">

                <div class="d-flex flex-column">
                    <label asp-for="Meal.Name">Имя*</label>
                    <input class="form-control" asp-for="Meal.Name" data-val-required="Введите имя" />
                    <span asp-validation-for="Meal.Name" class="text-danger mt-2"></span>

                    <label asp-for="Meal.Description" class="mt-3">Описание</label>
                    <input class="form-control" asp-for="Meal.Description" />
                    <span asp-validation-for="Meal.Description" class="text-danger mt-2"></span>

                    <label asp-for="Meal.Calories" class="mt-3">Калории</label>
                    <input class="form-control" asp-for="Meal.Calories" />
                    <span asp-validation-for="Meal.Calories" class="text-danger mt-2"></span>

                    <label asp-for="Meal.Weight" class="mt-3">Вес</label>
                    <input class="form-control" asp-for="Meal.Weight" />
                    <span asp-validation-for="Meal.Weight" class="text-danger mt-2"></span>

                    <label asp-for="Meal.Price" class="mt-3">Цена*</label>
                    <input class="form-control" asp-for="Meal.Price" />
                    <span asp-validation-for="Meal.Price" class="text-danger mt-2"></span>

                    <input class="form-control" asp-for="@Model.Meal.RestaurantId" type="hidden" value="@Model.Meal.RestaurantId">
                    <input class="form-control" asp-for="Meal.CreatedDate" type="hidden" value="@Model.Meal.CreatedDate">

                    <label asp-for="Meal.CategoryId" class="mt-3">Категория</label>
                    <select class="mt-2 form-select" asp-for="Meal.CategoryId" asp-items="Model.Categories"></select>

                    <input class="form-control" asp-for="Meal.ImageUrl" type="hidden" value="@Model.Meal.ImageUrl">
                    <input class="form-control" asp-for="Meal.Id" type="hidden" value="@Model.Meal.Id">

                    <button class="mt-3 btn btn-primary">Подтвердить</button>
                    <a class="mt-3 btn btn-danger" class="mt-3" asp-controller="Meal" asp-action="Delete"
                        asp-route-mealId="@Model.Meal.Id"
                        asp-route-restaurantId="@Model.Meal.RestaurantId">
                        Удалить
                    </a>
                    <a class="mt-3" asp-controller="Restaurant" asp-action="Restaurant" asp-route-restaurantId="@Model.Meal.RestaurantId">Назад</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
