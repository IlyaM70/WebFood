@{
    @model WebFood.Models.ViewModels.ShoppingCartViewModel
    Layout = null;
}

    @foreach (var item in Model.CartItems)
    {
        <div class="py-4" id="row-@item.RecordId">
            <div class="d-flex align-items-center">
                <div>
                    <img width=60 class="img-fluid" src="@item.Meal.ImageUrl" />
                </div>
                <h5 class="ms-2">
                    @item.Meal.Name
                </h5>
                <h5 class="ms-2">
                    @item.Meal.Price.ToString("0,0") &#8381;
                </h5>
            </div>
            <div class="mt-2  d-flex">
                <div class="col-6">
                    <partial name="_plusMinusInput" , model="@item"></partial>

                </div>
            </div>

        </div>
    }

    <a asp-action="Cart" asp-controller="ShoppingCart"
        class="mt-3 btn btn-primary">
        Оплатить <span id="cart-total">@Model.CartTotal.ToString("0,0")</span> &#8381
    </a>




