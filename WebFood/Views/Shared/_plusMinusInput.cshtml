@using WebFood.Models.Entities
@model Cart
<div class="col-sm-3 mx-auto">
    <div class="input-group">
        <span class="input-group-prepend">
            <button type="button" class="btn btn-outline-secondary btn-number" disabled="disabled" data-type="minus" data-field="quant[@Model.Meal.Id]">
                <i class="bi bi-dash"></i>
            </button>
        </span>
        <input type="text" name="quant[@Model.Meal.Id]" class="form-control input-number" value="@Model.Count" min="1" max="100">
        <span class="input-group-append">
            <button type="button" class="btn btn-outline-secondary btn-number" data-type="plus" data-field="quant[@Model.Meal.Id]">
                <i class="bi bi-plus"></i>
            </button>
        </span>
    </div>
</div>





