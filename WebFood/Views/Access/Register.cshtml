@model WebFood.Models.Entities.User
@{
    ViewData["Title"] = "Регистрация";
}
<div class="container-xl mt-5">
    <form asp-controller="Access" asp-action="Register" method="post">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <div class="d-flex justify-content-center">
            <div class="col-10 col-sm-6 col-md-3 d-flex flex-column">

                <input class="mt-3 form-control" type="email" placeholder="Email" asp-for="Email"
                       data-val-required="Введите email" data-val-email="Введите корректный email" />
                <span asp-validation-for="Email" class="text-danger mt-2"></span>

                <input class="mt-3 form-control" type="password" placeholder="Пароль" asp-for="Password"
                       data-val-required="Введите пароль" />
                <span asp-validation-for="Password" class="text-danger mt-2"></span>

                <button class="mt-3 btn btn-primary" type="submit">Отправить</button>
                <a class="mt-3" asp-action="Login" asp-controller="Access">Назад</a>
            </div>
        </div>
    </form>
</div>

<partial name="_ValidationScriptsPartial" />