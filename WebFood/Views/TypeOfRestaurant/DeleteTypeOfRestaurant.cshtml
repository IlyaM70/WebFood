@using WebFood.Models.Entities
@model TypeOfRestaurant
@{
    ViewData["Title"] = "Удалить категорию ресторана";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container-xl mt-3">
    <div class="d-flex justify-content-center">
        <div class="col-10 col-sm-6 col-md-6 col-lg-4">

            <form asp-controller="TypeOfRestaurant" asp-action="DeleteTypeOfRestaurant" method="post">

                <div class="d-flex flex-column">

                    <label asp-for="Name">Категория</label>
                    <select class="form-select" asp-for="Id" asp-items="ViewBag.RestaurantCategories"></select>

                    <button class="mt-3 btn btn-primary">Подтвердить</button>
                    <a class="mt-3" asp-controller="Home" asp-action="Admin">Назад</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}