@using WebFood.Models.Entities
@model Profile
@{
    ViewData["Title"] = "Данные заказа";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container-xl mt-3">
    <div class="d-flex justify-content-center">
        <div class="col-10 col-sm-6 col-md-6 col-lg-4">

            <form asp-controller="Order" asp-action="OrderInfo" method="post" enctype="multipart/form-data">

                <div class="d-flex flex-column">
                    <label asp-for="Name">Имя*</label>
                    <input class="form-control" asp-for="Name" value="@Model.Name"
                           data-val-required="Введите имя" />
                    <span asp-validation-for="Name" class="text-danger mt-2"></span>

                    <label asp-for="DeliveryAdres" class="mt-3">Адрес доставки*</label>
                    <input class="form-control" asp-for="DeliveryAdres"
                            data-val-required="Введите адресс доставки" value="@Model.DeliveryAdres"/>
                    <span asp-validation-for="DeliveryAdres" class="text-danger mt-2"></span>

                    <label asp-for="Phone" class="mt-3">Телефон*</label>
                    <input class="form-control" asp-for="Phone"
                           data-val-required="Введите номер телефона" value="@Model.Phone"/>
                    <span asp-validation-for="Phone" class="text-danger mt-2"></span>

                    <button class="mt-3 btn btn-primary">Подтвердить</button>
                    <a class="mt-3" asp-controller="ShoppingCart" asp-action="Cart">Назад</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
