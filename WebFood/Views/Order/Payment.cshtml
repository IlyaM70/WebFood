@using WebFood.Models.ViewModels
@model PaymentViewModel
@{
    ViewData["Title"] = "Оплата";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container-xl mt-3">
    <div class="d-flex justify-content-center">
        <div class="col-10 col-sm-6 col-md-6 col-lg-4">

            <form asp-controller="Order" asp-action="Payment" method="post">

                <div class="d-flex flex-column">

                    @if (ViewBag.Order == null)
                    {
                        <label asp-for="PromoCode">Промокод*</label>
                        <input class="form-control" asp-for="PromoCode"
                               data-val-required="Введите промокод" />
                        <span asp-validation-for="PromoCode" class="text-danger mt-2"></span>

                        <button class="mt-3 btn btn-primary">Подтвердить</button>
                        <a class="mt-3" asp-controller="ShoppingCart" asp-action="Cart">Назад</a>
                        
                    }
                    else
                    {
                        <h2>@ViewBag.Order</h2>
                        <a class="mt-3" asp-controller="Home" asp-action="Index">На главную</a>
                    }
                    
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}

