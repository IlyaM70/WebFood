@using WebFood.Models.Entities;
@using WebFood.Models.ViewModels
@model HomeViewModel
@{
    ViewData["Title"] = "Главная";
}

@*Filter*@
<div class="mt-3 container-xl">
    <form asp-controller="Home" asp-action="Index" method="post">
        <div class="d-flex">
            <div class="d-flex align-items-center">
                <label>Поиск ресторана:</label>
                <div class="ms-3">
                    <select class="form-select" asp-for="TypeId" asp-items="Model.Types"></select>
                </div>
            </div>
            <div class="ms-3 d-flex col-3">
                <input class="form-control" asp-for="SearchString" placeholder="Введите название ресторана" />
            </div>
            <button type="submit" class="ms-3 btn btn-primary">Найти</button>
        </div>
    </form>
</div>


@*Main*@
<div class="container-xl mt-3">
    <div class="row row-cols-4 g-2">
        @foreach (var restaurant in Model.Restaurants)
        {
            <div class="card">
                <img src="@restaurant.Imageurl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <a asp-controller="Restaurant"
                        asp-action="Restaurant" asp-route-restaurantId="@restaurant.Id">@restaurant.Name</a>
                    </h5>
                </div>
            </div>
        }
    </div>

</div>