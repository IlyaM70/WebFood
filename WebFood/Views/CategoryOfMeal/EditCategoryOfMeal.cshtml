@using WebFood.Models.Entities
@model CategoryOfMeal
@{
    ViewData["Title"] = "Изменить категорию меню";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container-xl mt-3">
    <div class="d-flex justify-content-center">
        <div class="col-10 col-sm-6 col-md-6 col-lg-4">

            <form asp-controller="CategoryOfMeal" asp-action="EditCategoryOfMeal" method="post">

                <div class="d-flex flex-column">

                    <label asp-for="Name">Категория</label>
                    <select class="form-select" asp-for="Id" asp-items="ViewBag.Categories"></select>

                    <label class="mt-3" asp-for="Name">Новое имя*</label>
                    <input class="form-control" asp-for="Name" data-val-required="Введите имя" />
                    <span asp-validation-for="Name" class="text-danger mt-2"></span>

                    <input type="hidden" asp-for="RestaurantId" />


                    <button class="mt-3 btn btn-primary">Подтвердить</button>
                    <a class="mt-3" asp-controller="Restaurant" asp-action="Restaurant" asp-route-restaurantId="@Model.RestaurantId">Назад</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}